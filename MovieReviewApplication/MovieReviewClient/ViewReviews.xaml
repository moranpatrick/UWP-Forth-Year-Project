<Page
    x:Class="MovieReviewClient.ViewReviews"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MovieReviewClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Cancel" Label="Cancel" Click="AppBarButton_Click"/>
        </CommandBar>
    </Page.BottomAppBar>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListBox x:Name="reviewsList" Margin="0,0,0,50" SelectionChanged="reviewsList_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Padding="20" Margin="20" Background="Crimson">
                        <TextBlock Text="{Binding name}" FontSize="24" Foreground="White"/>
                        <TextBlock Text="{Binding movie_title}" Foreground="Silver"/>
                        <TextBlock Text="{Binding movie_review}" Foreground="Silver"/>
                        <TextBlock Text="{Binding rating}" Foreground="Silver"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
