<Page
    x:Class="MovieReviewClient.EditReviewxaml"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MovieReviewClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Accept" Label="Update" Click="AppBarButton_Click_1"/>
            <AppBarButton Icon="Delete" Label="Delete" Click="AppBarButton_Click"/>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBox x:Name="name" PlaceholderText="Your Name" Margin="20"/>
            <TextBox x:Name="movie_title" PlaceholderText="Movie Title" Margin="20,0,20,0"/>
            <TextBox x:Name="movie_rating" PlaceholderText="Rating" Margin="20"/>
            <TextBox x:Name="movie_review" Height="250" PlaceholderText="Your Review Here" Margin="20,0,20,0"/>
        </StackPanel>
    </Grid>
</Page>
